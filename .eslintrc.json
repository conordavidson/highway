{
  "parser": "@typescript-eslint/parser",
  "plugins": ["fp"],
  "rules": {
    "no-unused-vars": "error",
    "sort-imports": "error",
    "fp/no-arguments": "error",
    "fp/no-class": "error",
    "fp/no-delete": "error",
    "fp/no-events": "error",
    "fp/no-get-set": "error",
    "fp/no-let": "error",
    "fp/no-loops": "error",
    "fp/no-mutating-assign": "error",
    "fp/no-mutating-methods": "error",
    "fp/no-mutation": "error",
    "fp/no-proxy": "error",
    "fp/no-rest-parameters": "error",
    "fp/no-this": "error",
    "fp/no-valueof-field": "error",
    "no-var": "error"
  }
}
