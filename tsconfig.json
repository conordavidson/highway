{
    "compilerOptions": {
      "target": "ES2021",
      "lib": ["ES2021"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "baseUrl": "./src"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }
  